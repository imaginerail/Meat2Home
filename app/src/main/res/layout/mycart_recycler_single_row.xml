<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="15dp"
    android:background="@color/colorAccent"
    android:padding="5dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/llcart1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="#F37171"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ibChicken"
            android:layout_marginTop="10dp"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@drawable/biryani"
            app:civ_border_color="#000000"
            app:civ_border_width="1dp" />


        <TextView
            android:id="@+id/txtMenuName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Biryani"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtMenuCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Mutton | Rs.349"
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/llplusminus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llnamefav"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="7">

            <ImageButton
                android:id="@+id/btnplus"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="#3756FF"
                android:src="@drawable/ic_plus" />

            <TextView
                android:id="@+id/txtquantity"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:text="10"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageButton
                android:id="@+id/btnminus"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1.5"
                android:background="#3756FF"
                android:src="@drawable/ic_minus" />

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:gravity="end"
                android:src="@drawable/ic_delete" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>


