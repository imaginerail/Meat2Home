<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C34040"
    android:orientation="vertical"
    tools:context=".activity.AccessLocationActivity">

    <ImageView
        android:id="@+id/imgMeat2home"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_margin="30dp"
        android:src="@drawable/site_icon" />

    <TextView
        android:layout_marginTop="48dp"
        android:id="@+id/txtaskpermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MEAT 2 HOME WANTS TO ACCESS YOUR DEVICE CURRENT LOCATION.YOU CAN CHANGE THE LOCATION DURING DELIVERY."
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/btnAccessLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="#F3291A"
        android:drawableStart="@drawable/ic_location"
        android:text="ACCESS DEVICE LOCATION"
        android:textAlignment="center"
        android:textSize="21sp" />

</LinearLayout>