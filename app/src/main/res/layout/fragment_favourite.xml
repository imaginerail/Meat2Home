<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FavouriteFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclefav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:padding="5dp" />
  <RelativeLayout
      android:id="@+id/noLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#ffffff">

    <Button
        android:id="@+id/btnExploreNow"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgEmptyFavourites"
       android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Explore Now"
        android:drawableEnd="@drawable/ic_arrrow"
        android:background="#F44336"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imgEmptyFavourites"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_heart"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/txtempty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You don't have any Favourites yet"
        android:layout_below="@+id/imgEmptyFavourites"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>
  </RelativeLayout>
</FrameLayout>